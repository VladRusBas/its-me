<div class="edit-body">
    <div class="container">
        <a href="/">Return to main page</a>
        <div class="about">
            <h3>About</h3>
            <form ref='mainphotoForm' id='mainphotoForm' method='post' encType="multipart/form-data">
                <label for="mainPhotoFile">Main photo</label>
                <div class="blockimg clearfix">
                    <div class="overlay" id="bigmainimage">
                        <div class="overlay_container">
                            <a href="#close">
                                <img src={{about.mainphoto}} />
                            </a>
                        </div>
                    </div>
                    <a href="#bigmainimage">
                        <div class="img-box">
                            <img src={{about.mainphoto}} alt="Main Photo">
                        </div>
                    </a>
                </div>
                <input type="file" name="mainPhotoFile" autocomplete="off">
                <button >Save</button>
            </form>
            <form>
                <label>About</label>
                <div class="about-form-row">
                    <label for="about-name">Name</label>
                    <textarea id="about-name" autocomplete="off">{{about.name}}</textarea>
                </div>
                <div class="about-form-row">
                    <label for="about-additional">Additional</label>
                    <textarea id="about-additional" autocomplete="off">{{about.additional}}</textarea>
                </div>
                <div class="about-form-row">
                    <label for="about-description">Description</label>
                    <textarea id="about-description" autocomplete="off">{{about.description}}</textarea>
                </div>
                <button id="save-about">Save</button>
            </form>
        </div>
        <div class="photos">
            <h3>Photos</h3>
            <ul>
                {{#each photos}}
                    <li class="clearfix">
                        <div class="blockimg">
                            <div class="overlay" id="bigphoto{{@index}}">
                                <div class="overlay_container">
                                    <a href="#close">
                                        <img src={{this}} />
                                    </a>
                                </div>
                            </div>
                            <a href="#bigphoto{{@index}}">
                                <div class="img-box">
                                    <img class="photo" src={{this}} alt="Photo">
                                </div>
                            </a>
                        </div>
                        <button type="button" name="deletePhoto-{{this}}">Delete</button>
                    </li>
                {{/each}}
                <li>
                    <form ref='photoForm' id='add-photo' action="/edit" method='post' encType="multipart/form-data">
                        <label>Add photo</label>
                        <input type="file" name="photoFile" autocomplete="off">
                        <button type="submit" id="save-photo">Save</button>
                    </form>
                </li>
            </ul>
        </div>
        <div class="contacts">
            <h3>Contacts</h3>
            <ul class="contact-list">
                {{#each contacts}}
                    <li class="contact">
                        {{this}}
                        <button type="button" name="deleteContact-{{@index}}">Delete</button>
                    </li>
                {{/each}}
                <li class="contact">
                    <input type="text" id="addContactText" autocomplete="off">
                    <button type="button" id="addContact">Add</button>
                </li>
            </ul>
        </div>
        <div class="settings">
            <h1>TODO</h1>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="js/edit.js"></script>
